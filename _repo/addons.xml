<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.spinztv" name="SpinzTv Wizard" version="1.0" provider-name="SpinzTv">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">	SpinzTV Wizard</summary>
    <description lang="en">Easy Update Your Kodi Install</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.spinz" name="Spinz-TV Pro" version="1.0" provider-name="MikkM">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="init.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en"></summary>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.SpinzTV" name="SpinzTV" version="0.1.1" provider-name="SpinzTV">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="SpinzTV">
            <info compressed="false">http://raw.github.com/spinztv/pro/master//_repo/addons.xml</info>
            <checksum>http://raw.github.com/spinztv/pro/master//_repo/addons.xml.md5</checksum>
            <datadir zip="true">http://raw.github.com/spinztv/pro/master//_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>SpinzTV</summary>
            <description>SpinzTV</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
